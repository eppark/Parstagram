<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivProfileOther"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/profile_other"
            android:src="@drawable/default_pfp" />

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:minLines="1"
            android:padding="20dp"
            android:textSize="18sp"
            tools:text="this is long text yesssssssssssssssssssssssss whowehorjoijfailsdfjl;asjg;ioralfjlk;asdjf;alksfd;akljefaklefja;klfjsd;klfjasdf" />

        <ImageView
            android:id="@+id/ivProfileMe"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/profile_me"
            android:src="@drawable/default_pfp" />

    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />


</RelativeLayout>